<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">
        
        <!-- Enable annotations -->
        <context:annotation-config />
        
        <!-- Enable reading from properties file -->
        <context:property-placeholder location="classpath:student-info.properties" />

       <bean id="student" class="com.rupesh.properties.Student">
       		<!-- property name="id" value="${student.id}"></property>
       		<property name="name" value="${student.name}"></property>
       		<property name="city" value="${student.city}"></property> -->
       </bean>
       
</beans>